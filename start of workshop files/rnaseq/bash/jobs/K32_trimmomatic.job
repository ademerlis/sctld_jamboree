#!/bin/bash
#BSUB -q general
#BSUB -J K32_trimmomatic
#BSUB -o /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/outputs/logfiles/K32trim%J.out
#BSUB -e /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/outputs/errorfiles/K32trim%J.err
module load java/1.8.0_60
module load trimmomatic/0.36
echo Unzipping K32
gunzip /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/data/reads/K32_1.fastq.gz
gunzip /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/data/reads/K32_2.fastq.gz
echo Trimming K32
/share/opt/java/jdk1.8.0_60/bin/java -jar /share/apps/trimmomatic/0.36/trimmomatic-0.36.jar \
PE \
-phred33 \
-trimlog /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/outputs/logfiles/K32_trim.log /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/data/reads/K32_1.fastq /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/data/reads/K32_2.fastq /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/outputs/trimmomaticreads/K32_1_trimmed_paired.fastq.gz /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/outputs/trimmomaticreads/K32_1_trimmed_unpaired.fastq.gz /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/outputs/trimmomaticreads/K32_2_trimmed_paired.fastq.gz /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/outputs/trimmomaticreads/K32_2_trimmed_unpaired.fastq.gz ILLUMINACLIP:/scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/data/adapters/TruSeq3-PE-2.fa:2:30:10:2:keepBothReads LEADING:3 TRAILING:3 SLIDINGWINDOW:4:15 MINLEN:36
echo K32 trimmed
gzip /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/data/reads/K32_1.fastq
gzip /scratch/projects/transcriptomics/mikeconnelly/projects/sctld_jamboree/rnaseq/data/reads/K32_2.fastq
